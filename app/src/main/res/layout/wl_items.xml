<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/wl_img_item"
        android:layout_width="114dp"
        android:layout_height="171dp"

        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:foreground="@drawable/gallery_shell"
        >
    </ImageView>

    <TextView
        android:id="@+id/text_meida_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/wl_img_item"
        android:layout_alignBottom="@id/wl_img_item"
        android:textColor="@color/white"
        android:paddingStart="2dp"
        >

    </TextView>
    <TextView
        android:id="@+id/btn_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_baseline_remove_circle_outline_24"
        android:layout_alignEnd="@id/wl_img_item"
        android:layout_alignBottom="@id/wl_img_item"
        >
    </TextView>

</RelativeLayout>

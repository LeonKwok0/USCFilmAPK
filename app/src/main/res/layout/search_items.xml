<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/search_img_item"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="10dp"
        android:foreground="@drawable/gallery_shell"
        android:scaleType="fitXY"
        >

    </ImageView>

    <TextView
        android:id="@+id/text_type_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/search_img_item"
        android:layout_alignTop="@id/search_img_item"
        android:paddingStart="10dp"
        android:paddingTop="14dp"
        android:text="MOVIE(2016)"
        android:textColor="@color/white"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:id="@+id/text_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/search_img_item"
        android:layout_alignBottom="@id/search_img_item"
        android:paddingStart="10dp"
        android:paddingBottom="14dp"
        android:text="CAPTAIN AMERICA: CIVIL WAR"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-smallcaps"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:id="@+id/text_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/search_img_item"
        android:layout_alignEnd="@id/search_img_item"
        android:paddingTop="14dp"
        android:paddingEnd="10dp"
        android:text="3.7"
        android:textColor="@color/white"
        android:textStyle="bold"></TextView>

    <TextView
        android:id="@+id/img_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/search_img_item"
        android:layout_marginTop="10dp"
        android:layout_toStartOf="@id/text_rate"
        android:background="@drawable/ic_baseline_star_24"
        android:textColor="@color/white">

    </TextView>


</RelativeLayout>
